{
  "name": "smd-desktop",
  "productName": "S.M.D Desktop",
  "version": "1.0.0",
  "description": "An Open-Sourced Cross-Platform desktop application to search and download songs. Also integrates with the Spotify API",
  "main": "app/src/main/index.js",
  "author": "Noah Wesley",
  "license": "GPL-3.0",
  "homepage": "https://www.noahweasley.github.io/SMD-Desktop",
  "repository": {
    "type": "git",
    "url": "www.github.com/noahweasley/SMD-desktop"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/noahweasley"
  },
  "keywords": [
    "javascript",
    "electron",
    "music",
    "spotify",
    "youtube",
    "downloader",
    "music-downloader",
    "youtube-downloader",
    "spotify-downloader"
  ],
  "scripts": {
    "start": "electron .",
    "debug": "electron . --trace-warnings",
    "lint:start": "npm run lint && npm run start",
    "start-no-database": "npm run clear-debug-database && npm run lint:start ",
    "start-no-preference": "npm run clear-preference && npm run lint:start",
    "clear-debug-database": "del /q %userprofile%\\Desktop\\Database\\*",
    "clear-preference": "del /q \"%userprofile%\\AppData\\Roaming\\S.M.D Desktop\\User\\Preferences\"",
    "clear-cache": "npm run clear-preference && npm run clear-debug-database",
    "pack:win32": "electron-packager . SMD-Desktop --overwrite --prune=true --out=dist/win --platform=win32 --arch=ia32 --icon=app/resources/build/win/app_icon.ico",
    "pack:win64": "electron-packager . SMD-Desktop --overwrite --prune=true --out=dist/win --platform=win32 --arch=x64 --icon=app/resources/build/win/app_icon.ico",
    "build": "npm run pack:win32 && npm run pack:win64",
    "package": "npm run build && npm run start",
    "generate": "node package/electron-windows-installer.js",
    "prettier:base": "prettier --ignore-path .gitignore",
    "eslint:base": "eslint --ignore-path .gitignore",
    "lint:eslint": "npm run eslint:base -- --max-warnings 0 \"**/*.{js,ts,tsx,mdx}\"",
    "lint:eslint-config-prettier": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "lint": "npm run lint:eslint",
    "format:prettier": "npm run prettier:base -- --write \"**/*.{js,ts,tsx,json,md,mdx}\"",
    "format:eslint": "npm run eslint:base -- --fix \"**/*.{js,ts,tsx,mdx}\"",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "devDependencies": {
    "electron": "^21.3.1",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^5.1.0",
    "eslint": "^8.34.0",
    "prettier": "2.8.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "node-user-settings": "^1.5.3",
    "spotify-web-api-node": "^5.0.2",
    "sqlite3": "^5.1.2",
    "youtube-search-without-api-key": "^1.0.7",
    "yt-dlp-wrap": "^2.3.11"
  }
}