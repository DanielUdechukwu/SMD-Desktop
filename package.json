{
  "name": "smd-desktop",
  "version": "1.0.0",
  "description": "The best desktop app to download Spotity songs for free and legally !!",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "codesign": "",
    "pack:osx": "electron-packager . SMD-Desktop --overwrite --prune=true --out=dist/osx --platform=darwin --arch=x64 --icon=assets/build/osx/app_icon.icns && npm run codesign",
    "pack:win32": "electron-packager . SMD-Desktop --overwrite --prune=true --out=dist/win --platform=win32 --arch=ia32 --icon=assets/build/win/app_icon.ico",
    "pack:win64": "electron-packager . SMD-Desktop --overwrite --prune=true --out=dist/win --platform=win32 --arch=x64 --icon=assets/build/win/app_icon.ico",
    "build": "npm run pack:osx && npm run pack:win32 && npm run pack:win64",
    "package": "npm start && npm build"
  }, 
  "repository": {
    "type": "git",
    "url": "www.github.com/noahweasley/SMD-desktop"
  },
  "keywords": [
    "javascript",
    "electron",
    "music",
    "spotify",
    "spotify-downloader"
  ],
  "author": "NoahWeasley",
  "license": "ISC",
  "devDependencies": {
    "electron": "^15.3.1",
    "electron-packager": "^15.4.0"
  },
  "dependencies": {
    "spotify-web-api-node": "^5.0.2"
  }
}
